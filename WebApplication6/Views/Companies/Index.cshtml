@model IEnumerable<WebApplication6.Models.Company>

@{
    ViewBag.Title = "Index";
   
}

<h2>Index</h2>

<p>
    @{
//  Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" });
    }
    <a href="@Url.Action("Create","Companies")" class="btn btn-info" target="_blank">
    <span class="glyphicon glyphicon-plus"></span>
    New Copany</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EDate)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Capital)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
            
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            <a href="@Url.Content(item.CUrl)" target="_blank"> @Html.DisplayFor(modelItem => item.CUrl) </a>
            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EDate)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Capital)
        </td>
        <td>
            <img src="@Url.Content(item.Logo)" width="50" height="50" />
            
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CID },new {@class="btn btn-success" })  | 
           
            @Html.ActionLink("Delete", "Delete", new { id=item.CID },new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>

<div class="alert alert-warning" >
    Count = @Html.Action("Count") <br />
    Max = @Html.Action("Max") <br />
    Min =  @Html.Action("Main")<br />
    Avarage =  @Html.Action("Avg")<br />
</div>